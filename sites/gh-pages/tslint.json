{
  "compilerOptions": {
    "noUnusedLocals": true,                /* Report errors on unused locals. */
    "noUnusedParameters": true             /* Report errors on unused parameters. */
  },
  "include": [
    "index.d.ts",
    "src/*.ts",
    "src/*.tsx",
    "src/**/*.ts",
    "src/**/*.tsx",
    "../node_modules/**/*",
    "../../node_modules/**/*"
  ],
  "extends": [
    "tslint:recommended",
    "tslint-react",
    "tslint-config-prettier"
  ],
  "linterOptions": {
    "exclude": [
      "config/**/*.js",
      "node_modules/**/*.ts"
    ]
  },
  "rules": {
    "interface-over-type-literal": true,
    "no-console": [
      false,
      "log",
      "error",
      "debug",
      "info",
      "time",
      "timeEnd",
      "trace"
    ],
    "ordered-imports": [
      true
    ],
    "object-literal-sort-keys": true,
    "no-var-requires": true
  }
}